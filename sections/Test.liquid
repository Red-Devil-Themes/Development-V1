{% schema %}
{
  "name": "Custom Banner" /* Defines the name of the section in the Shopify theme editor */,
  "settings": [
    {
      "type": "text" /* Input field for a title */,
      "id": "title" /* Unique ID for the title setting */,
      "label": "Title" /* Label displayed in the editor */,
      "default": "Elegant Developers" /* Default value for the title */
    },
    {
      "type": "text" /* Input field for a subtitle */,
      "id": "subtitle" /* Unique ID for the subtitle setting */,
      "label": "Subtitle" /* Label displayed in the editor */,
      "default": "ONLY WORKING AT FSL" /* Default value for the subtitle */
    },
    {
      "type": "url" /* Input field for a button link */,
      "id": "button_link" /* Unique ID for the button link */,
      "label": "Button Link" /* Label displayed in the editor */
    },
    {
      "type": "text" /* Input field for button text */,
      "id": "button_text" /* Unique ID for the button text */,
      "label": "Button Text" /* Label displayed in the editor */,
      "default": "CONTACT US" /* Default value for the button text */
    },
    {
      "type": "image_picker" /* Allows the user to upload a background image */,
      "id": "background_image" /* Unique ID for the background image */,
      "label": "Background Image" /* Label displayed in the editor */
    }
  ],
  "presets": [
    {
      "name": "Custom Banner" /* Default name for the section */
    }
  ]
}
{% endschema %}

<section
  class="custom-banner"
  style="background-image: url({{ section.settings.background_image | img_url: 'master' }});"
>
  <!-- Section container with dynamic background image -->
  <div class="custom-banner__content">
    <div class="custom-banner__text">
      <h1 class="custom-banner__title">{{ section.settings.title }}</h1>
      <!-- Displays the dynamic title -->
      <p class="custom-banner__subtitle">{{ section.settings.subtitle }}</p>
      <!-- Displays the dynamic subtitle -->
      <a href="{{ section.settings.button_link }}" class="custom-banner__button">{{ section.settings.button_text }}</a>
      <!-- Button with dynamic text and link -->
    </div>
  </div>
</section>

<style>
  /* General banner styling */
  .custom-banner {
    display: flex; /* Centers content horizontally */
    align-items: center; /* Centers content vertically */
    justify-content: center; /* Centers content within the banner */
    position: relative; /* Allows for absolute positioning of child elements */
    background-size: cover; /* Ensures the background covers the entire area */
    background-repeat: no-repeat; /* Prevents the background from repeating */
    background-position: center; /* Centers the background image */
    height: 500px; /* Height of the banner */
    padding: 0 80px; /* Horizontal padding */
  }

  /* Content container inside the banner */
  .custom-banner__content {
    display: flex; /* Flexbox container for alignment */
    width: 100%; /* Takes full width */
    max-width: 1200px; /* Limits the maximum width of the content */
    justify-content: flex-end; /* Aligns the content to the right */
    align-items: center; /* Vertically centers the content */
  }

  /* Text block inside the banner */
  .custom-banner__text {
    max-width: 600px; /* Sets the maximum width for the text area */
    text-align: left; /* Aligns text to the left */
  }

  /* Title styling */
  .custom-banner__title {
    font-family: 'Playfair Display', serif; /* Serif font for the title */
    font-size: 77px; /* Large font size */
    font-weight: 400; /* Regular font weight */
    line-height: 102.64px; /* Adjusts spacing between lines */
    color: #000000; /* Black text color */
    white-space: nowrap; /* Prevents text wrapping */
    margin: 0 0 10px; /* Adds spacing below the title */
  }

  /* Subtitle styling */
  .custom-banner__subtitle {
    font-family: 'Cambay', sans-serif; /* Sans-serif font for the subtitle */
    font-size: 28px; /* Font size for the subtitle */
    font-weight: 400; /* Regular font weight */
    line-height: 45.61px; /* Adjusts spacing between lines */
    color: #000000; /* Black text color */
    margin: 0 0 20px; /* Adds spacing below the subtitle */
  }

  /* Button styling */
  .custom-banner__button {
    display: inline-block; /* Makes the button behave as an inline-block */
    width: 221px; /* Sets the width of the button */
    height: 62px; /* Sets the height of the button */
    font-family: 'Cambay', sans-serif; /* Font for the button */
    font-size: 28px; /* Font size for the button text */
    font-weight: bold; /* Bold font weight */
    color: #ffffff; /* White text color */
    text-align: center; /* Centers text within the button */
    line-height: 58px; /* Centers the text vertically */
    text-decoration: none; /* Removes underline from the link */
    border: 4px solid #ffffff; /* White border */
    background: transparent; /* Transparent background */
    transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover effects */
  }

  /* Button hover effect */
  .custom-banner__button:hover {
    background-color: #ffffff; /* Changes background to white on hover */
    color: #000000; /* Changes text color to black on hover */
  }
</style>
